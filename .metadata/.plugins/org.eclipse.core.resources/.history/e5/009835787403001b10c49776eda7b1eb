import java.util.Arrays;
import java.util.Random;

public class array { // start class

	public static void main(String[] args) { // start main
		double [] array1; // every single value is going to be a double; step 1
		array1 = new double[10]; // step 2: allocating the space for an array of 10 doubles
		// step 3: putting stuff in it. Initialize. You have to put stuff in it before you can use it. 
		for (int i = 0; i<10; i++) { // start loop
			array1[i] = 0;
		} // end loop
		System.out.println(array1[3]);
	} // end main
} // end class

// can put step one and step two together in:
// double[] array1 = new double [10];