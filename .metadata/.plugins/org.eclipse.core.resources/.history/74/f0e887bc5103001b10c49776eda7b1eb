public class checkerboard {

    public static void main(String[] args) {
    int n = Integer.parseInt(args[0]);
    for(int i = 1; i <= n; i++) { // start big for loop
    	for (int j = 1; j <= n; j++) { // start little loop
    		if (j % 2 == 0) {// start if
    			System.out.print(" *");
    		} //end if
    		else {
    			System.out.print("* ");
    		}
    	} // end little loop
    	System.out.println("");
    } // end big for loop
    }
}