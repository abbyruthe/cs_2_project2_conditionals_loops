public class even { // start class

	public static void main(String[] args) { // start main
		int n = 10;
		for (int i = 0; i<=n; i++) { // being for loop
			// print out all the even numbers from 0 to n
			if (i%2 == 0) System.out.println(i);
			else continue;
		} // end for loop
	} // end main
} // end class
// write a loop that prints out all the even numbers from 1 to n